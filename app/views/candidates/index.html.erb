<p style="color: green"><%= notice %></p>

<h1>Candidates</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">University</th>
      <th scope="col">Experience</th>
      <th scope="col">Hiring Position ID</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.university %></td>
        <td><%= candidate.experience %></td>
        <td><%= candidate.hiring_position.title %></td>
        <td><%= link_to 'Show Candidate', [@hiring_position, candidate] %></td>
        <td><%= button_to 'Destroy Candidate', [@hiring_position, candidate], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New candidate", new_hiring_position_candidate_path %>
