<div id="<%= dom_id candidate %>">
  <p>
    <strong>Name:</strong>
    <%= candidate.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= candidate.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= candidate.phone %>
  </p>

  <p>
    <strong>University:</strong>
    <%= candidate.university %>
  </p>

  <p>
    <strong>Experience:</strong>
    <%= candidate.experience %>
  </p>

  <p>
    <strong>Hiring position:</strong>
    <%= @hiring_position.title %>
  </p>

  <p>
    <strong>CV:</strong>
    <%= image_tag candidate.candidate_cv.preview(resize_to_fit: [400, 400]) %>
  </p>
  


</div>
