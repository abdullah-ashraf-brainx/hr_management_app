<div id="<%= dom_id candidate %>">
  <div>
    <strong>Name:</strong>
    <%= candidate.name %>
  </div>
  <br>
  <div>
    <strong>Email:</strong>
    <%= candidate.email %>
  </div>
  <br>
  <div>
    <strong>Phone:</strong>
    <%= candidate.phone %>
  </div>
  <br>
  <div>
    <strong>University:</strong>
    <%= candidate.university %>
  </div>
  <br>
  <div>
    <strong>Experience:</strong>
    <%= candidate.experience %>
  </div>
  <br>
  <div>
    <strong>Hiring position:</strong>
    <%= @hiring_position.title %>
  </div>
  <br>
  <div>
    <strong>CV:</strong>
    <% if @candidate.cv.attached? %>
      <%= link_to 'Open CV', url_for(@candidate.cv), target: '_blank' %>
    <% end %>
  </div>
  <br>


</div>
