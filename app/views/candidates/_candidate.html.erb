<div id="<%= dom_id candidate %>">
  <p>
    <strong>Name:</strong>
    <%= candidate.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= candidate.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= candidate.phone %>
  </p>

  <p>
    <strong>University:</strong>
    <%= candidate.university %>
  </p>

  <p>
    <strong>Experience:</strong>
    <%= candidate.experience %>
  </p>

  <p>
    <strong>Hiring position:</strong>
    <%= candidate.hiring_position_id %>
  </p>

</div>
